# window rules, you can find the window class using xprop
assign [class=Thunderbird] 0
assign [class=Google-chrome] 1
assign [class=Emacs] 2
assign [class=Termite] 3
assign [class=discord] 4
assign [class=Audacity|Vlc|mpv|Ghb|Xfburn|Gimp*|Inkscape] 5
for_window [class=Viewnior|feh|Audacious|File-roller|Lxappearance|Lxtask|Pavucontrol|Gpick|Xfce4] floating enable
for_window [class="Yad" title="yad-calendar"] floating enable # polybar calendar
for_window [class=Thunderbird|Google-chrome|Emacs|Termite|discord] focus

# class				border	backgr.	text	indica.	child_border
client.focused			#585858 #2f343f #d8dee8 #ffffff #585858
client.focused_inactive	        #2f343f #2f343f #d8dee8 #2f343f #2f343f
client.unfocused		#2f343f #2f343f #d8dee8 #2f343f #2f343f
client.urgent			#2f343f #2f343f #d8dee8 #2f343f #2f343f
client.placeholder		#2f343f #2f343f #d8dee8 #2f343f #2f343f
client.background		#2f343f
